<% provide(:news, "active") %>
<section class="section-title">
    <div class="container">
      <h1>Media<small> What's going on?</small></h1>
    </div>
</section>

<section>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ol class="breadcrumb">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Articles", articles_path %></li>
            <li class="active">Media</li>
          </ol>
        </div>
      </div>
  </div>
</section>

<div class="container custom-blog-container">
    <div class="row">
        <div class="col-sm-8 blog-main">
            <div class="blog-post">
                <h3 class="blog-post-title"><%= @article.title %></h3>
                <p class="blog-post-meta"><small><%= @article.created_at.strftime("%a %b %d, %Y") %></small>
                by <%= @article.user.username if @article.user%></p>
                <p><%= simple_format(@article.description) %></p>
            </div><!-- /.blog-post -->
        </div>
    </div>
    
    <div class="row">
        <div class="col col-sm-8">
            <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-xs btn-info" %>
            <% end %>
            <%= link_to "Article list...", articles_path %>
        </div>
        
    </div>
    <hr>
</div>